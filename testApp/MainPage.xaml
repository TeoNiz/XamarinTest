<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
xmlns:controls="clr-namespace:testApp;assembly=testApp"
x:Class="testApp.MainPage">
	<ContentPage.Padding>
	<OnPlatform x:TypeArguments="Thickness"
		iOS="20,40,20,20"
		Android="20,20,20,20"
		WinPhone="20,20,20,20"	/>
	</ContentPage.Padding>

	<ContentPage.Content>
		<StackLayout HorizontalOptions="CenterAndExpand"
			VerticalOptions="FillAndExpand"
			Orientation="Vertical"
			Spacing="20">
			<Label Text="Label" />
			<Button x:Name="clickCountButton" Text="Click me" />
			<Label Text="Label2" />
			<Entry x:Name="taskText" Placeholder="Enter task..." />
			<Button x:Name="saveButton" Text="Add task"	IsEnabled="true" Clicked="AddTaskButtonClicked"/>
			<controls:AdMobView WidthRequest="320" HeightRequest="50" />
		</StackLayout>
	</ContentPage.Content>
</ContentPage>
